<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/layou_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/btnback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_baseline_arrow_back_24" />


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/Title"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="@string/backgroundcolor" />

        <TextView
            android:id="@+id/sc_background"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="#FFFFFF" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_sc_background"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_recycleview"
        android:gravity="center"
        android:onClick="onclick"
        android:text="انتخاب رنگ" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/Title"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="@string/tollbarcolor" />

        <TextView
            android:id="@+id/sc_toolbar"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="#FFFFFF" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_sc_toolbar"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_recycleview"
        android:gravity="center"
        android:onClick="onclick"
        android:text="انتخاب رنگ" />

    <TextView
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="انتخاب اندازه نوشته ها" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_recycleview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fontsiz"
            style="@style/Title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/backgroundcolor" />

        <SeekBar
            android:id="@+id/seekbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:max="30"
            android:min="10" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_changed"
            style="@style/Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_recycleview"
            android:gravity="center"
            android:text="ثبت تغییرات" />

        <Button
            android:id="@+id/btn_reset"
            style="@style/Title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_recycleview"
            android:gravity="center"
            android:text="تنظیمات پیش فرض" />
    </LinearLayout>


